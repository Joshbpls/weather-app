{
    "compilerOptions": {
        "baseUrl": ".",
        "sourceMap": true,
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "typeRoots": ["node_modules/@types"],
        "types": ["node"],
        "strict": true,
        "declaration": true,
        "outDir": "target",
        "paths": {
            "*": [
                "*",
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
